<Window x:Class="CSVFileSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVFileSort"
        mc:Ignorable="d"
        Title="CSV File Sorting" Height="350" Width="525">
    <Grid>
        <Button x:Name="cmdCreateFiles" Content="Create Files" HorizontalAlignment="Left" Margin="184,55,0,0" VerticalAlignment="Top" Width="122" Height="37" IsDefault="True" Click="cmdCreateFiles_Click" Background="#FF10C710" Foreground="#FFFDFBFB" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="cmdOpenFile1" Content="Open File 1" HorizontalAlignment="Left" Margin="23,183,0,0" VerticalAlignment="Top" Width="84" RenderTransformOrigin="-0.198,0.42" Height="27" IsEnabled="False" Click="cmdOpenFile1_Click" />
        <Button x:Name="cmdOpenFile2" Content="Open FIle 2" HorizontalAlignment="Left" Margin="403,183,0,0" VerticalAlignment="Top" Width="75" Height="27" IsEnabled="False" Click="cmdOpenFile2_Click"/>

    </Grid>
</Window>
